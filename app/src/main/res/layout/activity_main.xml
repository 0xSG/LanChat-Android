<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tb.sooryagangarajk.com.lanchatandroid.MainActivity"
    android:background="#232323"
    >

    <Button
        android:id="@+id/sbtnid"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg"
        android:text="Send"
        android:textColor="@color/fColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mylist"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/msgId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="Message"
        android:textColorHint="#ffff"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/fColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sbtnid"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ipId"
        android:layout_width="241dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="IP"
        android:textColorHint="#ffff"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/fColor"
        app:layout_constraintBottom_toTopOf="@+id/msgId"
        app:layout_constraintEnd_toEndOf="@+id/msgId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/mylist"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:stackFromBottom="true"
        android:textColor="@color/fColor"
        app:layout_constraintBottom_toTopOf="@+id/ipId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myipid" />

    <TextView
        android:id="@+id/myipid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/fColor"
        android:background="@drawable/bg"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
